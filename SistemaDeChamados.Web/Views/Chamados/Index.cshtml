@model IEnumerable<SistemaDeChamados.Application.ViewModels.ChamadoIndexVM>

@{
    ViewBag.Title = "Index";
}

<div class="title">
    <h3>Listagem de Chamados</h3><hr />
</div>
<a href="@Url.Action("Novo")" class="btn btn-primary" style="margin-bottom: 10px; margin-top: 10px"><i class="glyphicon glyphicon-plus"></i> Adicionar</a>
<table class="table table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataDeCriacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeDoColaborador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeDoAnalista)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiasEmAberto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataDeCriacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDoColaborador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeDoAnalista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiasEmAberto)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
